      <button class="w3-bar-item w3-button" onclick="openCity('London')">Search by Name</button>
      <button class="w3-bar-item w3-button" onclick="openCity('Paris')">Country of Birth</button>
      <button class="w3-bar-item w3-button" onclick="openCity('Tokyo')">Country of Death</button>
      <button class="w3-bar-item w3-button" onclick="openCity('Tokyo')">Category</button>
      <button class="w3-bar-item w3-button" onclick="openCity('Tokyo')">Year of Award</button>
    </div>

    <div id="London" class="w3-container city">
      <h2>search by name</h2>
      <p>London is the capital city of England.</p>
    </div>

    <div id="Paris" class="w3-container city" style="display:none">
      <h2>serach by country of birth</h2>
      <p>Paris is the capital of France.</p> 
    </div>

    <div id="Tokyo" class="w3-container city" style="display:none">
      <h2>search by country of death</h2>
      <p>Tokyo is the capital of Japan.</p>
    </div>
    <script>
function openCity(cityName) {
    var i;
    var x = document.getElementsByClassName("city");
    for (i = 0; i < x.length; i++) {
       x[i].style.display = "none";  
    }
    document.getElementById(cityName).style.display = "block";  
}
</script>
